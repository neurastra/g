// Основные типы
int age = 25; // целое число - как счет лет в клане
double price = 19.99; // дробное число - цена виски
char grade = 'A'; // один символ - оценка в клановой шкале
bool isScottish = true; // логический да/нет
string name = "Angus"; // строка - имя горца

// Константы:
